# Configurações do Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
# URL do backend Nest (em produção usar https://api.fut7pro.com.br)
NEXT_PUBLIC_API_URL=https://api.fut7pro.com.br
# Calls server-side usam BACKEND_URL (mantem consistencia com NEXT_PUBLIC_API_URL)
BACKEND_URL=https://api.fut7pro.com.br
# Bloqueia acesso direto ao Prisma quando true (obrigatório em produção)
DISABLE_WEB_DIRECT_DB=false

# Token usado para proteger a rota /api/revalidate/public
PUBLIC_REVALIDATE_TOKEN=local-dev-token

# Configurações de Autenticação
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Configurações do Banco de Dados
# REMOVER em produção: Frontend não deve usar banco direto.
# DATABASE_URL="postgresql://user:password@localhost:5432/fut7pro"

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configurações de Pagamento (futuro)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Configurações de Monitoramento
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn
# Analytics
NEXT_PUBLIC_ANALYTICS_URL=https://analytics.example.com/collect


# Configurações de Cache
REDIS_URL=redis://localhost:6379

# Configurações de Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Configurações de Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=service-role-key-aqui
SUPABASE_BUCKET_PUBLIC=public-media
SUPABASE_BUCKET_SPONSORS=sponsors
SUPABASE_BUCKET_PRIVATE=private-media
SUPABASE_BUCKET_TEMP=temp-uploads

# Configurações de Ambiente
NODE_ENV=development 

# Configurações de SEO
SITE_NAME=Fut7Pro
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Seeds (somente dev local)
# Use hashes gerados previamente (ex: bcrypt) — não commit valores reais
SEED_SUPERADMIN_EMAIL=admin@example.com
SEED_SUPERADMIN_PASSWORD_HASH=$2a$10$hash_aqui
